<h1>ONLINE SHOP</h1>


<div id="list">
    <% @products.each do |p| %>
        <% pid = p.id %>
        <div class="card">
            <%= form_for @item, url: {controller: 'cart_items', action: :create} do |c| %>
                <div class="name">
                    <%= p.name %>
                </div>
                <div class="price">
                    <%= p.price %>円
                </div>
                <div class="form">
                    <%= c.hidden_field :product_id, value: pid %>
                    <%= c.label :qty, '数量' %>
                    <%= c.number_field :qty, min: "0", value: "0" %>
                    <%= c.submit 'カートに入れる' %>
                </div>
            <% end %>
        </div>
        <br />
    <% end %>
</div>

<div class="link">
    <%= link_to '商品管理', products_path %>
</div>

<div class="link">
    <%= link_to 'カートを確認', carts_path %>
</div>